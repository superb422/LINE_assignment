<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <layer-list>
                <!-- shadow (밑으로) : 그림자 -->
                <item>
                    <shape>
                        <corners android:radius="6dp" />
                        <solid android:color="#d3d3d3" />
                    </shape>
                </item>
                <!-- background (위로) -->
                <item >
                    <shape>
                        <corners android:radius="6dp" />
                        <stroke android:width="1dp" android:color="#d3d3d3" />
                    </shape>
                </item>
            </layer-list>
        </item>
</selector>